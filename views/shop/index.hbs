{{# each products }}
  <div class="row">
      <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
              <img src={{this.imageURL}} alt="..." class="img-responsive">
              <div class="caption">
                  <h3>{{this.name}}</h3>
                  <p class="description">{{this.description}}</p>
                  <div class="clearfix">
                      <div class="price pull-left">${{this.prettyPrice}}</div>
                      <a href="/purchase/{{this.id}}" class="btn btn-success pull-right" role="button">Purchase</a>
                  </div>
              </div>
          </div>
      </div>
  </div>
{{/each }}
